            {% unless settings.image_1_headline == blank %}<h3 class="headline" {% unless settings.image_1_headline_color == blank %}style="color:{{ settings.image_1_headline_color }}"{% endunless %}>{{ settings.image_1_headline }}</h3>{% endunless %}
            {% unless settings.image_1_subtitle == blank %}<div class="subtitle" {% unless settings.image_1_subtitle_color == blank %}style="color:{{ settings.image_1_subtitle_color }}"{% endunless %}><p>{{ settings.image_1_subtitle }}</p></div>{% endunless %}
            {% unless settings.image_1_button_text == blank %}<a href="{{ settings.image_1_link }}" class="action_button" {% unless settings.image_1_button_color == blank %}style="color:{{ settings.image_1_button_color }}; border-color:{{ settings.image_1_button_color }}"{% endunless %}>{{ settings.image_1_button_text }}</a>{% endunless %}
