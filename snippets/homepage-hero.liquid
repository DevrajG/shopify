    <li>
      {% if settings.image_1_type == 'mp4' %}
        <div class='embed-container'>{{ settings.image_1_video_embed }}</div>
      {% else %}
        <a href="{{ settings.image_1_link }}">
          {% if settings.image_1_type == 'gif' %}
            <img src="{{ 'slideshow_1.gif' | asset_url }}" alt="{{ settings.image_1_alt_text | escape }}" />
          {% else %}
            <img src="{{ 'slideshow_1.jpg' | asset_url }}" alt="{{ settings.image_1_alt_text | escape }}" />
          {% endif %}
        </a>
      {% endif %}
