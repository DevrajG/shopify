          </div>
        </div>
      </div>
    </div>
    
    <div class="tab-single-section" id="contact-us">
      <div class="tab-section-title">{{ section.settings.contact_title }}</div>
      <div class="tab-section-content">
        <div class="contact-us-wrapper">  
          {% form 'contact' %}

          {% if form.posted_successfully? %}
          <p class="note form-success">
            Your mail has been successfully sent
          </p>
          {% endif %}
          {{ form.errors | default_errors }}

          {% assign name_attr = 'contact.form.name' | t | handle %}

          <div class="span6">
            <label for="ContactFormName">Name*</label>
            <input type="text" id="ContactFormName" name="name" name="contact[{{ name_attr }}]" class="custom-form-input" autocapitalize="words" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}">
          </div>
          <div class="span6">
            <label for="ContactFormEmail">Email*</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" class="custom-form-input" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
          </div>
          <div class="span12">
            <label for="ContactFormMessage">Message</label>
            <textarea id="ContactFormMessage" name="contact[body]" class="custom-form-textarea">{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>
          <div class="span12">
            <button type="submit" name="submit">SEND</button>
          </div>

          {% endform %}
        </div>
      </div>
    </div>
   </div>
    
  </div>  
</div>

<script>
  
  function Tabclick(){
   $('.faq-single-tabhead a[href^="#"]').click(function (event) {
      event.preventDefault();
      var navOffset = $('header').outerHeight();
      var navOffset1 = $('.faq_tabs_head').outerHeight();

      $('html, body').animate({
        scrollTop: $($.attr(this, 'href')).offset().top - navOffset - navOffset1
      }, 500);
    });
  };
  
  $(document).ready(function(){
    $('.accordion-title').click(function () {   
      var $this = $(this);
      $(this).parent('.accordion-wrapper').siblings('.accordion-wrapper').removeClass('active'); 
      $(this).parent('.accordion-wrapper').siblings('.accordion-wrapper').children('.accordion-content').slideUp(); 
      $(this).siblings('.accordion-content').slideToggle();
      $(this).parent('.accordion-wrapper').toggleClass('active');
      
      setTimeout(function(){
        var navOffset = $('header').outerHeight();
     	 var navOffset1 = $('.faq_tabs_head').outerHeight();

        var offsetAmount = $('.accordion-wrapper.active').offset().top;
        $('html,body').animate({
          scrollTop : offsetAmount - navOffset - navOffset1
        },500);
      },500);
      
    });
	Tabclick();      
  });
  
  $(window).resize(function(){  
  Tabclick();
  });  
  
  function onScroll(event){        
    var navOffset1 = $('.faq_tabs_head').outerHeight();
    var scrollPos = $(document).scrollTop();
    $('.faq-single-tabhead a[href^="#"]').each(function () {
        var currLink = $(this);
        var refElement = $(currLink.attr("href"));
        if (refElement.position().top <= scrollPos + navOffset1  && refElement.position().top + refElement.height() > scrollPos) {
            $('.faq-single-tabhead a[href^="#"]').css('opacity','0.2');
            currLink.css('opacity','1');
        }
        else{
            currLink.css('opacity','0.2');
        }
    });
}
  
   $(document).on("scroll", onScroll);

</script>


