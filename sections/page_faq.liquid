<div class="faq_tabs_wrapper">  
  <div class="container">
    
    <div class="faq_tabs_head">
      <div class="container">
      <div class="span-one-third">
        <div class="faq-single-tabhead">
          <a class="faq-smooth" href="#faq">
            <img src="{{ section.settings.imageFAQ | img_url:"small" }}">
            <div class="tab-title">{{ section.settings.faq_title }}</div>
          </a>
        </div>
      </div>
      <div class="span-one-third">
        <div class="faq-single-tabhead">
          <a class="faq-smooth" href="#customer-services">
            <img src="{{ section.settings.imageService | img_url:"small"  }}">
            <div class="tab-title">{{ section.settings.service_title }}</div>
          </a>
        </div>
      </div>
      <div class="span-one-third">
        <div class="faq-single-tabhead">
          <a class="faq-smooth" href="#contact-us">
            <img src="{{ section.settings.imageContact | img_url:"small"  }}">
            <div class="tab-title">{{ section.settings.contact_title }}</div>
          </a>
        </div>
      </div>
    </div>
    </div>
    
    <div class="tab-single-wrap">
    <div class="tab-single-section" id="faq">
      <div class="tab-section-title">{{ section.settings.faq_title }}</div>
      <div class="tab-section-content">
        <div class="accordion">
          
          

          <div class="accordion-wrapper active">
            <div class="accordion-title">product information
              <div class="title-symbol"></div>
            </div>     

            <div class="accordion-content">
              {% for block in section.blocks %}                      
              {% if block.settings.category contains 'product information' %}
              <div class="faq-que-wrap">
                <div class="faq-que">{{ block.settings.title }}</div>
                <div class="faq-ans">{{ block.settings.answer1 }}</div>
              </div>
              {% endif %}
              {% endfor %}  
            </div>
          </div>                 

          <div class="accordion-wrapper">
            <div class="accordion-title">orders and shipping
              <div class="title-symbol"></div>
            </div>
            <div class="accordion-content">
              {% for block in section.blocks %}                      
              {% if block.settings.category contains 'orders and shipping' %}
              <div class="faq-que-wrap">
                <div class="faq-que">{{ block.settings.title  }}</div>
                <div class="faq-ans">{{ block.settings.answer1  }}</div>
              </div>
              {% endif %}
              {% endfor %}  
            </div>
          </div>

          <div class="accordion-wrapper">
            <div class="accordion-title">returns and exchanges
              <div class="title-symbol"></div>
            </div>
            <div class="accordion-content">
              {% for block in section.blocks %}                      
              {% if block.settings.category contains 'returns and exchanges' %}
              <div class="faq-que-wrap">
                <div class="faq-que">{{ block.settings.title }}</div>
                <div class="faq-ans">{{ block.settings.answer1  }}</div>
              </div>
              {% endif %}
              {% endfor %}
            </div>
          </div>
          
        </div>
      </div>
    </div>
    
    <div class="tab-single-section" id="customer-services">
      <div class="tab-section-title">{{ section.settings.service_title }}</div>
      <div class="tab-section-content">
        <div class="service-wrapper">
          <div class="span3">
            <div class="custom-service">
              <div class="service-title">{{ section.settings.service_title1 }}</div> 
              <div class="service-content">
                {{ section.settings.service_content1 }}
              </div>
              <div class="service-link">
