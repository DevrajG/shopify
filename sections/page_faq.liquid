              <div class="service-title">{{ section.settings.service_title3 }}</div>
              <div class="service-content">
                {{ section.settings.service_content3 }}
              </div>
              <div class="service-link">
                <a href="{{ section.settings.service_link_url3 }}">{{ section.settings.service_link3 }}</a>
              </div>
            </div>
          </div>
          <div class="span3">
            <div class="custom-service">
              <div class="service-title">{{ section.settings.service_title4 }}</div>
              <div class="service-content">
                {{ section.settings.service_content4 }}              
              </div>
              <div class="service-link">
                <a href="{{ section.settings.service_link_url4 }}">{{ section.settings.service_link4 }}</a>
